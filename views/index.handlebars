
    <div class="container">
      <div class="controls">
        <button class="btn btn-default" data-toggle="modal" data-target="#httpRequestModal">&hellip;</button>
        <form data-method="DELETE"><button class="btn btn-primary">DELETE</button></form>
        <a href="." class="btn btn-primary">GET</a>
      </div>
      <h1>Express Browsable API</h1>
      <pre>HTTP/1.1 {{ code }} {{ statusText }}</pre>
      <pre>{{ body }}</pre>
    </div>

    <div class="modal fade" id="httpRequestModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Send an HTTP request</h4>
          </div>
          <div class="modal-body">
              <form method="POST">
                  <div class="form-group">
                    <label>Content Type</label>
                    <input class="form-control" data-override='content-type' value="application/json">
                  </div>
                  <div class="form-group">
                    <label>Content</label>
                    <textarea class="form-control" data-override='content' rows=8></textarea>
                  </div>
                  <div class="controls">
                  <button type="submit" class="btn btn-primary">POST</button>
                  <button type="submit" data-method="PUT" class="btn btn-primary">PUT</button>
                  <button type="submit" data-method="PATCH" class="btn btn-primary">PATCH</button>
                  </div>
                </form>
          </div>
        </div>
      </div>
    </div>

